{
    "extends": "airbnb",
    "ecmaFeatures": {
          "jsx": true
    },
    "env": {
        "jest": true,
        "browser": true
    },
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
    "rules": {   
    // allow JSX in files with '.js' extension
    "react/jsx-filename-extension": ["error", { "extensions": [".js", ".jsx"] }]
    }
}